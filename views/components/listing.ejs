<% 
    if (typeof href === "undefined") {
        href = "/"
    } 

    if (typeof canEdit === "undefined") {
        canEdit = false;
    }
%> 
<!-- w-[45%] md:w-[20%] -->
<a class="rounded-md w-auto flex flex-col m-4 h-[18rem] overflow-hidden bg-[#1F1F1F] hover:scale-105 hover:bg-[#363636] transition-all active:scale-90" href="<%= href %>">
    <img src="<%= listing.previewImage %> " class="object-cover w-full h-32">
    <div class="p-4 flex flex-col justify-between flex-1">
        <div class="flex flex-col">
            <div class="flex justify-between items-center">
                <h1 class="text-white font-bold text-xl text-ellipsis whitespace-nowrap overflow-hidden w-[80%]"><%= listing.name %> </h1>
                <h1 class="text-white font-bold">‚≠ê<%= listing.rating %> </h1>
            </div>
            <h2 class="text-white text-opacity-70 mt-[-0.4rem]"><%= listing.address %> </h2>
            <p class="text-gray-300 justify-self-start h-12 text-ellipsis overflow-hidden multiline-ellipsis"><%= listing.description %> </p>
        </div>
        <p class="text-white">&#8369;<%= listing.pricing %></p> 
    </div>
</a>