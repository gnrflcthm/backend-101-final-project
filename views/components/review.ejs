<article class="p-4 rounded-md bg-[#424242] w-full h-32 mb-4 overflow-hidden">
    <div class="flex justify-between items-center">
        <h2 class="text-white font-bold text-2xl flex items-center"><i class="fa-solid fa-user text-[#ED2553] mr-4 text-lg"></i><%= review.authorUsername || "Anonymous" %> </h2>
        <p class="text-white font-bold text-2xl flex items-center"><%= review.rating %><i class="fa-solid fa-star text-yellow-500 ml-2 text-lg"></i></p>
    </div>
    <p class="text-white p-2 w-full h-full relative whitespace-normal text-ellipsis"><%= review.comment %></p>
</article>