<%- include("components/header") %>
<%- include("components/navbar", {current: "/listing/current" , user}) %>
<main class="flex-1 p-10 flex-flex-col justify-start items-center w-full">
    <h1 class="text-4xl font-bold text-white text-center mb-10">My Listings</h1>
    <% if (listings.length === 0) { %>
        <section class="flex justify-center items-center h-full mt-10">
            <h1 class="font-bold text-4xl text-center text-[#ED2553]">You currently don't have any listings.</h1>
        </section>
    <% } else { %>
        <section class="grid grid-cols-3">
            <% for(let listing of listings) { %>
                <%- include("components/listing", {listing, canDelete: true, href: `/listing/${listing.id}/edit`}) %>
            <% } %>
        </section>
    <% }  %>
</main>
<%- include("components/footer") %>